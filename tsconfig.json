{
    "compilerOptions": {
        "target": "ES6",
        "module": "ES6",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "declaration": true,
        "moduleResolution": "node",
        "outDir": "./dist",
        "rootDir": ".",
        "allowSyntheticDefaultImports": true,
    },
    "include": [
        "src/**/*.ts"
    ]
}